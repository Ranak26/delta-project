<% layout('layouts/boilerplate') %> 
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;   
    justify-content: space-between;
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
    text-decoration: none;
    color: rgb(255, 65, 65);
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p{
    font-size: 0.8rem;
  }
  .Tax-info{
    display: none;
  }
  .Tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 0 1rem;
    display: flex;
    align-items: center;
  }
  .no-results {
    margin-top: 3rem;
    color: #555;
  }
  .no-results h3 {
    font-size: 1.8rem;
    margin-top: 1rem;
  }
  .no-results p {
    font-size: 1rem;
    margin-bottom: 1rem;
  }
  .no-results .btn {
    padding: 0.5rem 1.5rem;
    font-size: 1rem;
  }
</style>

<div id="filters">
  <a href="/listings?category=cheaper" class="filter">
    <i class="fa-solid fa-hand-holding-dollar"></i>
    <p>Cheaper</p>
  </a>

  <a href="/listings?category=trending" class="filter">
    <i class="fa-solid fa-fire"></i>
    <p>Trending</p>
  </a>

  <a href="/listings?category=rooms" class="filter">
    <i class="fa-solid fa-bed"></i>
    <p>Rooms</p>
  </a>

  <a href="/listings?category=city" class="filter">
    <i class="fa-solid fa-mountain-city"></i>
    <p>Ionic City</p>
  </a>

  <a href="/listings?category=castles" class="filter">
    <i class="fa-brands fa-fort-awesome"></i>
    <p>Castles</p>
  </a>

  <a href="/listings?category=pools" class="filter">
    <i class="fa-solid fa-person-swimming"></i>
    <p>Pools</p>
  </a>

  <a href="/listings?category=camping" class="filter">
    <i class="fa-solid fa-campground"></i>
    <p>Camping</p>
  </a>

  <a href="/listings?category=beach" class="filter">
    <i class="fa-solid fa-sailboat"></i>
    <p>Beach</p>
  </a>

  <a href="/listings?category=favourite" class="filter">
    <i class="fa-solid fa-ranking-star"></i>
    <p>My favourite</p>
  </a>

  <div class="Tax-toggle">
    <div class="form-check form-switch form-check-reverse">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display Total After Taxes</label>
    </div>
  </div>
</div>

<% if (allListings.length === 0) { %>
  <div class="no-results text-center">
    <i class="fa-solid fa-magnifying-glass fa-3x" style="color: #ccc;"></i>
    <h3>No listings found</h3>
    <p>Try searching for something else or check another category.</p>
    <a href="/listings" class="btn btn-primary mt-2">View All Listings</a>
  </div>
<% } else { %>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 row-cols-1 g-4 mt-3">
    <% for (let listing of allListings) { %>
      <div class="col">
        <div class="card listing-card">
          <!-- IMAGE LINK -->
          <a href="/listings/<%= listing._id %>">
            <img src="<%= listing.image.url %>" class="card-img-top" style="width: 100%; height: 20rem; object-fit: cover" />
          </a>

          <!-- CARD BODY -->
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br />
              Price: &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
              <i class="Tax-info"> &nbsp; &nbsp;+18% GST</i>
            </p>

            <!-- FAVOURITE BUTTON -->
            <% if (currUser) { %>
              <form action="/listings/<%= listing._id %>/favourite" method="POST" style="display:inline;">
                <% if (listing.favourites && listing.favourites.includes(currUser._id)) { %>
                  <button type="submit" class="btn btn-sm btn-danger">♥ Favourite</button>
                <% } else { %>
                  <button type="submit" class="btn btn-sm btn-outline-danger">♡ Favourite</button>
                <% } %>
              </form>
            <% } %>

          </div>
        </div>
      </div>
    <% } %>
  </div>
<% } %>

<script>
  // TAX TOGGLE
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let Taxinfo = document.getElementsByClassName("Tax-info");
    for(let info of Taxinfo){
      info.style.display = taxSwitch.checked ? "inline" : "none";
    }
  });
</script>
