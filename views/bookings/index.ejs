<% layout("layouts/boilerplate") %>

<div class="container mt-4">
  <h2>My Bookings</h2>
  <hr>

  <% if (!bookings || bookings.length === 0) { %>
  <div class="d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="text-center p-5 rounded-4 border bg-white" style="max-width: 420px;">
      
      <div class="mb-4">
        <i class="fa-regular fa-calendar-xmark" style="font-size: 3.5rem; color: #adb5bd;"></i>
      </div>

      <h4 class="fw-semibold mb-2">No bookings found</h4>

      <p class="text-muted mb-4" style="font-size: 0.95rem;">
        You havenâ€™t made any bookings yet.  
        Discover stays and book your next trip.
      </p>

      <a href="/listings" class="btn btn-primary px-4 py-2">
        Browse Listings
      </a>

    </div>
  </div>
<% } else { %>
    <div class="row">
      <% bookings.forEach(booking => { %>
        <% if (booking.listing) { %>
          <div class="col-md-6 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">
                  <%= booking.listing.title %>
                </h5>

                <p class="card-text">
                  ğŸ“ <%= booking.listing.location %><br>
                  ğŸ—“ <b>Check-in:</b>
                  <%= booking.checkIn.toDateString() %><br>
                  ğŸ—“ <b>Check-out:</b>
                  <%= booking.checkOut.toDateString() %><br>
                  ğŸ”– <b>Status:</b> <%= booking.status %>
                </p>

                <form
                  action="/bookings/<%= booking._id %>?_method=DELETE"
                  method="POST"
                >
                  <button class="btn btn-danger btn-sm">
                    Cancel Booking
                  </button>
                </form>
              </div>
            </div>
          </div>
        <% } %>
      <% }) %>
    </div>
  <% } %>
</div>
